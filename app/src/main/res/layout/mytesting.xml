<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear"
    android:background="#d7ccc8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="vertical"
            android:background="#795548">

            <ImageView
                android:id="@+id/back_storelistdetails"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="10dp"
                />

            <views.CustomTextViewMedium
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:gravity="center"
                android:text="Add Store"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/badge"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:contentDescription="@null"
                android:padding="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/settingicon"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:padding="10dp"
                android:visibility="gone" />


        </RelativeLayout>


        <ScrollView
            android:isScrollContainer="false"
            android:id="@+id/regScroll"
            android:layout_width="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fillViewport="true"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/final_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/first_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="Upload Store Image"
                        android:textColor="#4b4b4b"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/contactus_addfile"
                        android:layout_width="fill_parent"
                        android:layout_gravity="center"
                        android:layout_height="170dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:visibility="visible" />


                    <HorizontalScrollView
                        android:id="@+id/secondweight_ll"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:fillViewport="false"
                        android:visibility="visible">
                        <LinearLayout
                            android:id="@+id/lnrImages"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </HorizontalScrollView>


                    <TextView
                        android:id="@+id/upload_img_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/login_id"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <HorizontalScrollView
                        android:id="@+id/secondweight_ll_new"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:fillViewport="false"
                        android:layout_gravity="center"
                        android:visibility="visible">
                        <LinearLayout
                            android:id="@+id/lnrImages_new"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </HorizontalScrollView>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ratailername"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <views.CustomEditTextView
                            android:id="@+id/input_ratailername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Store Name"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_category"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <views.CustomEditTextView
                            android:id="@+id/input_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Category"
                            android:drawablePadding="7dp"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_retail_size"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <views.CustomEditTextView
                            android:id="@+id/input_retail_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Size/value of Store"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:visibility="gone"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_retailer_address"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <views.CustomEditTextView
                            android:id="@+id/input_retailer_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Address"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_retailer_state"
                            android:textColorHint="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <views.CustomEditTextView
                                android:id="@+id/input_retailer_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="State"
                                android:drawablePadding="2dp"
                                android:focusable="false"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black"
                                />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_retailer_city"
                            android:textColorHint="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <views.CustomEditTextView
                                android:id="@+id/input_retailer_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="District"
                                android:drawablePadding="2dp"
                                android:focusable="false"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black"
                                />
                        </android.support.design.widget.TextInputLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_retailer_zipcode"
                            android:textColorHint="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <views.CustomEditTextView
                                android:id="@+id/input_retailer_zipcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Zip Code"
                                android:maxLength="6"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black"
                                />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_ratailercontact"
                            android:textColorHint="@color/black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <views.CustomEditTextView
                                android:id="@+id/input_ratailercontact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contact"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black"
                                />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>



                    <TextView
                        android:id="@+id/txt_submit_retail"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/login_id"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>