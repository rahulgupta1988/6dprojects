<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#F8F8F8"
        android:padding="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_weight=".75"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            android:weightSum="1">



            <ImageView
                android:id="@+id/applause_icon"
                android:layout_weight=".16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/awar_applause"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05" />

            <ImageView
                android:id="@+id/valueyou_icon"
                android:layout_weight=".16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/awar_ivalueyou"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05" />

            <ImageView
                android:id="@+id/cheer_icon"
                android:layout_weight=".16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/awar_cheerapeer"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05" />

            <ImageView
                android:id="@+id/lead_icon"
                android:layout_weight=".16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/awar_dricetolead"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05" />

            <ImageView
                android:id="@+id/thank_icon"
                android:layout_weight=".16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/awar_thankyou"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/award_text_lay"
            android:layout_weight=".25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/award_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#121212"
                android:textStyle="bold"
                android:text=""
                android:textSize="14dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>