<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/third_ll"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_weight=".260"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView android:layout_gravity="center_horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/photo_events"
                    android:src="@drawable/news_feed_img"
                    />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <FrameLayout
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true" >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_profile_img_events"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            fab:siBorderWidth="1dp"
                            fab:siBorderColor="@color/grey"
                            android:src="@drawable/default_profile_picture"/>

                        <ImageView
                            android:id="@+id/donor_icon_events"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/donor_icon"
                            android:visibility="gone"
                            android:layout_gravity="bottom|right"
                            />
                    </FrameLayout>

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight=".740"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal">

                <views.CustomEditTextViewRegular
                    android:id="@+id/txt_username_events"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:enabled="false"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:background="@null"
                    android:text="Abhishek Shukla"
                    android:textSize="18dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <views.CustomTextViewRegular
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="left|center_vertical"
                    android:textColor="#636363"
                    android:background="@null"
                    android:text="Birthday"
                    android:textSize="13dp"
                    />



                <views.CustomTextViewRegular
                    android:id="@+id/birthday"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="#252525"
                    android:background="@null"
                    android:text="27 Oct"
                    android:textSize="12dp"
                    />

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchStyle"
                    android:layout_centerVertical="true"/>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <views.CustomTextViewRegular
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="#636363"
                    android:background="@null"
                    android:text="Work Anniversary"
                    android:textSize="13dp"
                    />
                <views.CustomTextViewRegular
                    android:id="@+id/work_anniversory"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="#252525"
                    android:background="@null"
                    android:text="27 Oct"
                    android:textSize="12dp"
                    />


                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchStyle"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <views.CustomTextViewRegular
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="#636363"
                    android:background="@null"
                    android:text="Wedding Anniversary"
                    android:textSize="13dp"
                    />
                <views.CustomTextViewRegular
                    android:id="@+id/wedding_anniversary"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:textColor="#0480E3"
                    android:background="@null"
                    android:text="27 Oct"
                    android:textSize="12dp"
                    />

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchWedding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchStyle"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                android:background="#555556"
                android:visibility="visible">
            </LinearLayout>


            <LinearLayout
                android:id="@+id/date_calender"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".4"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="30dp"
                        android:enabled="false"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_marginLeft="5dp"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:text="Wedding Anniversary"
                        android:src="@drawable/calendar_img"
                        />

                </LinearLayout>

                <views.CustomEditTextViewRegular
                    android:layout_weight="2.6"
                    android:layout_width="0dp"
                    android:enabled="false"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:text="Save Wedding Anniversary"
                    android:textSize="18dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".4"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/is_subscribe_img"
                        android:layout_width="30dp"
                        android:enabled="false"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_marginLeft="5dp"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:text="Wedding Anniversary"
                        />

                </LinearLayout>

                <views.CustomEditTextViewRegular
                    android:layout_weight="2.6"
                    android:layout_width="0dp"
                    android:enabled="false"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:text="Subscribe"
                    android:textSize="18dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#e2e2e2"
                android:visibility="gone">
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <views.CustomEditTextViewRegular
                        android:layout_weight="2.5"
                        android:layout_width="wrap_content"
                        android:enabled="false"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:text="Event Wishes"
                        android:textSize="18dp"
                        />

                    <LinearLayout
                        android:id="@+id/filter_ll"
                        android:orientation="vertical"
                        android:layout_weight=".5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="30dp"
                            android:enabled="false"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:text="Wedding Anniversary"
                            android:textSize="15dp"
                            android:src="@drawable/filter_bg"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/events_list"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/eventdata_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No Data Available"
                    android:textSize="18sp"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>





</LinearLayout>