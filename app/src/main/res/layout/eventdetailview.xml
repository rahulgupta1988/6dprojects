<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:weightSum="1">

        <RelativeLayout
            android:layout_weight=".1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#386CFF">

            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/birthday_event_icon"
                android:layout_centerVertical="true"
                android:padding="5dp"
                />

            <views.CustomTextViewMedium
                android:layout_toRightOf="@+id/event_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celebrate Moments"
                android:textSize="24sp"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/event_banner_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/birthday_event_banner"
                    android:scaleType="fitXY"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp">


                    <com.github.siyamed.shapeimageview.CircularImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/user_profile_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:siBorderColor="@color/white"
                        android:src="@drawable/icon_profile_drawer_bg"
                        app:siBorderWidth="2dp"
                        />


                    <views.CustomTextViewMedium
                        android:layout_toRightOf="@+id/user_profile_img"
                        android:layout_centerVertical="true"
                        android:id="@+id/user_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:paddingLeft="10dp"
                        />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>



        <RelativeLayout
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <views.CustomTextViewMedium
                android:id="@+id/event_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#020202"
                />

            <views.CustomTextViewMedium
                android:layout_below="@+id/event_txt"
                android:id="@+id/work_anw_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#020202"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_weight=".1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <FrameLayout
                android:id="@+id/expframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center|left|bottom"
                        android:gravity="center|left|bottom"
                        android:layout_height="fill_parent">


                        <LinearLayout
                            android:id="@+id/notification_ll"
                            android:layout_width="20dp"
                            android:layout_height="38dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/notification_img"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:contentDescription="@null"
                                android:textColor="@color/white"
                                android:src="@drawable/more_disable"
                                android:gravity="center"
                                android:visibility="gone"/>

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/share_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:textColor="@color/white"
                            android:src="@drawable/share_new"
                            android:gravity="center"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/email_img"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:textColor="@color/white"
                            android:src="@drawable/email_new"
                            android:gravity="center"
                            android:visibility="gone"
                            />


                        <LinearLayout
                            android:id="@+id/likeit"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/like_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:contentDescription="@null"
                                android:textColor="@color/white"
                                android:src="@drawable/unlikeit_img"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/unlikeit"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:contentDescription="@null"
                                android:textColor="@color/white"
                                android:src="@drawable/likeit_img"
                                android:gravity="center" />
                        </LinearLayout>


                        <!-- <ImageView
                             android:id="@+id/refresh_img"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:layout_margin="5dp"
                             android:src="@drawable/refresh"
                             android:contentDescription="@null"
                             android:textColor="@color/white"
                             android:gravity="center" />-->

                        <ImageView
                            android:id="@+id/commentit"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:textColor="@color/white"
                            android:src="@drawable/comment"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:id="@+id/skip_lay"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:gravity="center"
                            android:visibility="visible">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SKIP"
                                android:textSize="14sp"
                                android:visibility="gone"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="@null"
                                android:textColor="@color/white"
                                android:src="@drawable/arrow_drawer"
                                android:gravity="center"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/morepost"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@null"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:contentDescription="@null"
                                android:textColor="@color/white"
                                android:src="@drawable/refresh"
                                android:gravity="center" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/nodata_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="visible">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/no_event_image"
            android:scaleType="fitXY"
            />
    </LinearLayout>

</LinearLayout>