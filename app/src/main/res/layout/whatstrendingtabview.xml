<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tatatrendtab"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <ImageView
            android:id="@+id/tataworld_tab"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/tata_world_disable"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            />
        <ImageView
            android:layout_weight=".25"
            android:id="@+id/hometab_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:src="@drawable/up_arrow_3x"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/powertrendtab"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <ImageView
            android:id="@+id/power_tab"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/power_disable"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            />
        <ImageView
            android:layout_weight=".25"
            android:id="@+id/profiletab_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:src="@drawable/up_arrow_3x"
            />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/generaltrendtab"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        >
        <ImageView
            android:id="@+id/general_tab"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/general_disable"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            />
        <ImageView
            android:layout_weight=".25"
            android:id="@+id/xwtab_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/up_arrow_3x"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/technotrendtab"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        >
        <ImageView
            android:id="@+id/technology_tab"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/technology_disable"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            />
        <ImageView
            android:layout_weight=".25"
            android:id="@+id/searchtab_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/up_arrow_3x"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sportstrendtab"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <ImageView
            android:id="@+id/sports_tab"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/sports_disable"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            />
        <ImageView
            android:layout_weight=".25"
            android:id="@+id/settingtab_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/up_arrow_3x"
            android:visibility="invisible"
            />
    </LinearLayout>

</LinearLayout>