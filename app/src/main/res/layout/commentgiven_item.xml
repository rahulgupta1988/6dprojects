<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginBottom="3dp">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/nominatorimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_profile_picture"
        app:siBorderWidth="2dp"
        app:siBorderColor="#ffffff"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nominatorimg"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/name_deg_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asfdsgshg"
            android:textColor="#474747"
            android:textSize="14sp"
            android:ellipsize="start"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_below="@+id/username"
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asfdsgshg"
            android:textColor="#474747"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />

            <FrameLayout
                android:id="@+id/tag_lay"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/tagicon"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tag_icon"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tagcount_txt"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="10"
                    android:textColor="#e5e5e5"
                    android:layout_gravity="right|top"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:background="@drawable/redcircle"
                    android:visibility="visible"/>
            </FrameLayout>



        </RelativeLayout>

        <TextView
            android:layout_below="@+id/name_deg_lay"
            android:id="@+id/comment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asfdsgshg"
            android:textColor="#474747"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />
    </RelativeLayout>
</RelativeLayout>
