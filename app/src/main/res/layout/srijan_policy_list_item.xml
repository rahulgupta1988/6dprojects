<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        card_view:cardCornerRadius="5dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:background="#ffffff"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/policy_name_lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#BF433A"
            android:text="Appointment terms and conditions"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            />

     <RelativeLayout
         android:layout_below="@+id/policy_name_lay2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center">

        <RelativeLayout
            android:id="@+id/emj_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/emoji_a"
                android:layout_width="30sp"
                android:layout_height="30dp"
                android:src="@drawable/srijan_a_smiley"
                android:layout_centerVertical="true"/>

            <views.CustomTextViewMedium
                android:id="@+id/emoji_a_txt"
                android:layout_below="@+id/emoji_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0%"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/a_line"
            android:layout_toRightOf="@+id/emj_a"
            android:layout_width="10dp"
            android:layout_height="3dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/a_line"
            android:id="@+id/emj_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/emoji_b"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/srijan_b_smiley"
                android:layout_centerVertical="true"/>

            <views.CustomTextViewMedium
                android:id="@+id/emoji_b_txt"
                android:layout_below="@+id/emoji_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/20%"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <View
            android:id="@+id/b_line"
            android:layout_toRightOf="@+id/emj_b"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/b_line"
            android:id="@+id/emj_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/emoji_c"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/srijan_c_smiley"
                android:layout_centerVertical="true"/>

            <views.CustomTextViewMedium
                android:id="@+id/emoji_c_txt"
                android:layout_below="@+id/emoji_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/20%"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/c_line"
            android:layout_toRightOf="@+id/emj_c"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/c_line"
            android:id="@+id/emj_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/emoji_d"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/srijan_d_smiley"
                android:layout_centerVertical="true"/>

            <views.CustomTextViewMedium
                android:id="@+id/emoji_d_txt"
                android:layout_below="@+id/emoji_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/20%"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/d_line"
            android:layout_toRightOf="@+id/emj_d"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/d_line"
            android:id="@+id/emj_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/emoji_e"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/srijan_e_smiley"
                android:layout_centerVertical="true"/>

            <views.CustomTextViewMedium
                android:id="@+id/emoji_e_txt"
                android:layout_below="@+id/emoji_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/20%"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/e_line"
            android:layout_toRightOf="@+id/emj_e"
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/e_line"
            android:id="@+id/emj_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/emoji_f"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/srijan_f_smiley"
                android:layout_centerVertical="true"/>

            <views.CustomTextViewMedium
                android:id="@+id/emoji_f_txt"
                android:layout_below="@+id/emoji_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/20%"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
     </RelativeLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e5e5e5"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="2dp"
        android:background="#ffffff">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <views.CustomTextViewMedium
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="57"
                android:textSize="14sp" />
            <ImageView
                android:layout_toRightOf="@+id/like_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/like_fill"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <views.CustomTextViewMedium
                android:id="@+id/coment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="57"
                android:textSize="14sp" />
            <ImageView
                android:layout_toRightOf="@+id/coment_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/comment"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <views.CustomTextViewMedium
                android:id="@+id/view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="57"
                android:textSize="14sp" />
            <ImageView
                android:layout_toRightOf="@+id/view_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/srijan_view"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>