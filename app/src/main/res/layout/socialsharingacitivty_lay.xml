<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/headerlay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="1"
        android:background="#840202">

        <ImageView
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_share_t"
            android:id="@+id/imageView2"/>

        <TextView
            android:id="@+id/header_title"
            android:layout_weight=".6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Posting To Xpression"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/sharebtn"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="POST"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/rectshareforrecopost"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            />


    </LinearLayout>

<LinearLayout
    android:weightSum=".9"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight=".6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/rectshape"
        android:padding="10dp">

        <ImageView
            android:id="@+id/choosedimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_weight=".2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_share"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="write something..."
            android:paddingLeft="10dp"
            android:maxLength="50"
            />


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="1"
        android:background="#840202">


        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="true"
            />


    </LinearLayout>

</LinearLayout>
</LinearLayout>