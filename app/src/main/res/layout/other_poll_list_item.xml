<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="20dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#CEE0FF"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:paddingLeft="10dp">

            <views.CustomTextViewRegular
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/arrow_ic"
                android:id="@+id/poll_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Business support Business support Business support Business support Business support Business support Business support Business support Business support Business support Business support Business support Business supp"
                android:layout_margin="5dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:lineSpacingExtra="-2dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/arrow_ic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/more_arrow_ic"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

<RelativeLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="10dp">

    <TextView
        android:layout_toLeftOf="@+id/date_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Poll ended on"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textColor="#BF433A"/>

    <TextView
        android:id="@+id/date_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="16-11-2017 15:30"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:textColor="#1150B9"/>

</RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>