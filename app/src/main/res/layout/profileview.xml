<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_3x"
        android:visibility="visible"
        android:weightSum="1">


        <FrameLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_weight=".55"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_gravity="center">
            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userimg"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:siBorderWidth="2dp"
                app:siBorderColor="@color/white"
                android:src="@drawable/default_profile_picture"
                />
            <ImageView
                android:id="@+id/editimg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:src="@drawable/edit_blue_3x"
                android:visibility="gone"
                />

        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".45"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Mr Akash Tiwari"
                />
            <TextView

                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ffb401"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Designation"
                android:padding="2dp"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#c5c5c5"
                android:textSize="12sp"
                android:gravity="center"
                android:text="Mumbai Spt"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageView
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@drawable/quote_3x"
            android:padding="10dp"
            />
        <TextView
            android:layout_weight=".8"
            android:id="@+id/quotetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="&quot;Happiness is a state of mind &quot;"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textSize="6pt" />

        <ImageView
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/edit_blue_3x"
            android:padding="5dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <include layout="@layout/profiletablistdetails"/>
            <!-- <ListView
                android:id="@+id/test1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>-->
        </LinearLayout>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>