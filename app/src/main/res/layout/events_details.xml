<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/cancelshare"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:padding="13dp"
            />

        <views.CustomTextViewRegular
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Event Details"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="18dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e2e2e2"
        android:visibility="visible">

    </LinearLayout>

    <ScrollView
        android:id="@+id/regScroll"
        android:isScrollContainer="false"
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_height="0dp"
        android:layout_weight=".93">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/final_ll"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_gravity="left|center|top"
                        android:layout_height="match_parent"
                        android:gravity="left|center|top">
                        <ImageView
                            android:id="@+id/posttypeimg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/birthday_cake_img"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight=".8"
                        android:layout_marginTop="6dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        >

                        <views.CustomTextViewRegular
                            android:id="@+id/posttext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#272727"
                            android:text="sdasdd"
                            android:textSize="16sp"
                            />
                        <views.CustomTextViewRegular
                            android:id="@+id/postdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"
                            android:text="drtetet"
                            android:layout_gravity="right|center"
                            android:gravity="right|center"
                            android:textColor="#99000000"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <views.CustomTextViewRegular
                        android:id="@+id/events_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#D9000000"
                        android:text="gdfgfdg"
                        android:textSize="16sp"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>