<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingBottom="0.5dp"
    android:background="#e5e5e5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/user_img"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            fab:siBorderWidth="2dp"
            fab:siBorderColor="#ffffff"
            android:background="#ffffff"
            android:layout_alignBottom="@+id/photo"
            android:src="@drawable/default_profile_picture"
            android:layout_alignParentLeft="true"/>

        <RelativeLayout
            android:layout_toLeftOf="@+id/admin_ic"
            android:id="@+id/text_lay"
            android:layout_toRightOf="@+id/user_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Asin kaif"
                android:textColor="#2652AB"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <views.CustomTextViewMedium
                android:id="@+id/user_desg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="IT Head"
                android:textColor="#979797"
                android:textSize="14sp"
                android:layout_below="@+id/name"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/admin_ic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/admin_icon_gp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>