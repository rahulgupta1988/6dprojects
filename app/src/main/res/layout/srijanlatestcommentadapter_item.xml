<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prent_lay"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fffff1"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

<LinearLayout
    android:layout_weight=".97"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/srijantopcmt_rect"
    android:padding="1.5dp">

    <LinearLayout
        android:id="@+id/child_lay"
        android:layout_weight=".85"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1">

    <views.CustomTextViewRegular
        android:layout_weight=".82"
        android:id="@+id/comment_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="increase trends of didgital interface and applications require the.increase trends of didgital interface and applications require the.the. qadea wasdas awdas asdasd asdasd asdasd asdasd asdasd asdasd asdasd asdasdas asdasd qweqw etrytry fyuytub  wretreg tryutru retret retret wetr"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:maxLines="8"
        android:ellipsize="end"
        android:background="#0A40D1"
        android:padding="5dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
       />

    <RelativeLayout
        android:id="@+id/card_footer"
        android:layout_weight=".18"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#0A40D1"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cal_ic"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/srijan_date"
                android:layout_centerVertical="true"/>
            <views.CustomTextViewRegular
                android:id="@+id/date_txt"
                android:layout_toRightOf="@+id/cal_ic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Apr 05 2017"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#b6caff"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/time_ic"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/srijan_time"
                android:layout_centerVertical="true"/>
            <views.CustomTextViewRegular
                android:id="@+id/time_txt"
                android:layout_toRightOf="@+id/time_ic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Apr 05 2017"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#b6caff"
                android:textStyle="bold"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rpl_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/rep_ic"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/srijan_replay"
                android:layout_centerVertical="true"/>


            <views.CustomTextViewRegular
                android:layout_toRightOf="@+id/rep_ic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reply"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:textColor="#b6caff"
                android:textStyle="bold"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/tag_view"
        android:layout_weight=".15"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#0A40D1"
        android:gravity="center_horizontal"
        android:paddingTop="5dp">


        <FrameLayout
            android:id="@+id/tag_lay"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp">

            <ImageView
                android:id="@+id/tagicon"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/tag_icon"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tagcount_txt"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:text="100"
                android:textColor="#e5e5e5"
                android:layout_gravity="right|top"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="8sp"
                android:background="@drawable/redcircle"
                android:visibility="visible"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
    <View
        android:layout_weight=".03"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fffff1"/>
</LinearLayout>