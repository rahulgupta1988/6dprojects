<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/fame_chronicles"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Fame Chronicales"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/meet_the_energizers"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Meet the Energizers"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:visibility="gone">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/recognitionreceived"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/total_recognition_received_3x"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Total Recognition Received"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:visibility="visible">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/recognitiongiven"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/total_recognition_given_3x"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Total Recognition Given"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:visibility="visible">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatstrending"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/whats_trending"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="What's trending!"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:visibility="visible">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/poll"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/opinion_poll_3x"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Opinion Poll"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/visitrocounter"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/visitor_counter"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Visitors"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logout"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Logout"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3b3b3b"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e2e2e2">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>