<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum=".9">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/navbar_strip_3xx">

        <ImageView
            android:id="@+id/cancelshare"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow_white_icon"
            android:padding="13dp"
            />

        <TextView
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Share an Update"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_weight=".73"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|top">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/nominatorimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_square_user"
                android:layout_gravity="center_horizontal|top"
                app:siBorderWidth="2dp"
                app:siBorderColor="@color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_weight=".8"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:paddingLeft="10dp">

            <TextView
                android:layout_weight=".1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="What's on your mind?"
                android:textColor="#474747"
                android:textSize="16sp"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/sharetxt"
                android:layout_weight=".9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Write something"
                android:textSize="12sp"
                android:textColor="#c2c2c2"
                android:textColorHint="#c2c2c2"
                android:layout_gravity="top"
                android:gravity="top"
                android:padding="5dp"
                android:background="#00000000"
                android:textStyle="bold"
                />
        </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/linklay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:visibility="visible">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/videodoclink"
                android:gravity="center_horizontal|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#9f9f9f"
                android:textSize="16sp"
                android:padding="5dp"/>

                <ImageView
                    android:id="@+id/cancelattachment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cancel"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    />

            </FrameLayout>
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight=".07"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f7f7f7"
        android:weightSum="1">

        <LinearLayout
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/xpwayimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/xw_red_2x"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_weight=".6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_gravity="center_vertical|right"
            android:weightSum=".9">

        <ImageView
            android:id="@+id/cameraimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera_3x"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/videoimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/video_3x"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/documentimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/document_3x"
            android:layout_margin="10dp"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:weightSum="1"
        android:background="#ebebeb">

        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/sharebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_blue_3x"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>